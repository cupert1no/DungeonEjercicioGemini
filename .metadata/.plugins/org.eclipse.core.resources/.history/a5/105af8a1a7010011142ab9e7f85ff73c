package javaBean;

public abstract class Personaje {
	
	private String nombre;
	private int nivel;
	private int puntosVida;

	private static int totalPersonajes = 0;

	public Personaje(java.lang.String nombre, int string, int puntosVida) {
		super();
		this.nombre = nombre;
		this.nivel = nivel;
		this.puntosVida = puntosVida;
		
		totalPersonajes++;
	}

	public String getNombre() {
		return nombre;
	}

	public void setNombre(String nombre) {
		this.nombre = nombre;
	}

	public int getString() {
		return String;
	}

	public void setString(int string) {
		String = string;
	}

	public int getPuntosVida() {
		return puntosVida;
	}

	public void setPuntosVida(int puntosVida) {
		this.puntosVida = puntosVida;
	}

	public static int getTotalPersonajes() {
		return totalPersonajes;
	}

	public static void setTotalPersonajes(int totalPersonajes) {
		Personaje.totalPersonajes = totalPersonajes;
	}
	
	public abstract void atacar(Personaje objetivo);
	
	

} // Fin de Clase
